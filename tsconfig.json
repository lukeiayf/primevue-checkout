{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./build",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vitest/globals",
       "vite/client"
    ],
    "jsx": "preserve"
  },
  "include":[
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "src/server.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}