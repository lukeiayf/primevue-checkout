{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./built",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*",
    "./src/**/*.vue"
  ]
}